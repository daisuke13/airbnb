.sign-up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .sign-up_email
      = f.email_field :email, placeholder: "メールアドレス", autofocus: true
    .sign-up_name
      = f.text_field :name, placeholder: "名前"
    .sign-up_password
      - if @minimum_password_length
        = f.password_field :password, placeholder: "パスワードを入力してください", autocomplete: "off"
    .sign-up_password-confirmation
      = f.password_field :password_confirmation, placeholder: "パスワードを再度入力してください", autocomplete: "off"
    .sign-up_submit
      = f.submit "登録", id: 'sign-up_submit'
    .sign-up_log-in
      Airbnbアカウントはお持ちですか？
      = render "devise/shared/links"
